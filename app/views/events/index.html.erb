
<% @events.each do |event| %>
  <div class="card" style="width: 30rem">
    <div class="card-img-top">
      <%= image_tag event.image_url %>
    </div>
    <div class="card-header">
      <h4 class="pl-3"> <%= event.title %> </h4>
    </div>
    
    <div class="card-body">
      <%= event.event_description %>
    </div>
  </div>
<% end %>